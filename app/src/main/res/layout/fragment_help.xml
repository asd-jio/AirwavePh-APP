<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    tools:context=".HelpFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/help_btn1"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/help_btn1"
                android:paddingTop="20dp" />

            <Button
                android:id="@+id/help_btn2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/help_btn2"/>

            <Button
                android:id="@+id/help_btn3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/help_btn3"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>