<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".Newsletter">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/help_btn1"
                android:layout_width="365dp"
                android:layout_height="245dp"
                android:background="@drawable/newsl_abtus_btn"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/help_btn2"
                android:layout_width="365dp"
                android:layout_height="245dp"
                android:background="@drawable/newsl_contact_btn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/help_btn3"
                android:layout_width="365dp"
                android:layout_height="245dp"
                android:background="@drawable/newsl_devs_btn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>